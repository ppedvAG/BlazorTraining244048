@page "/todoV"
@inject ToDoVM VM
<h3>ToDoView</h3>
<div class="container">
    <div class="row">
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active" aria-current="true">Todos</li>

             
                <Virtualize Items="VM.TodoO.todos" Context="item" OverscanCount="5" ItemSize="25" >
                    <ItemContent>
                        <li class='list-group-item  @(item.completed?"list-group-item-dark":"") '>
                            @item.todo
                        </li>
                    </ItemContent>
                    <EmptyContent>lade ...</EmptyContent>
                </Virtualize>
            </ul>
        </div>
    </div>

</div>
